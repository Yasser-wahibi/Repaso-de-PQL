ACCEPT NUMERO NUMBER PROMPT 'ESCRIBE UN NUMERO: ';
DECLARE
    NUMERO NUMBER(9) := &NUMERO;
    CONT NUMBER(6) := 1;
    FACTORIAL NUMBER(9) := 1;
BEGIN
    WHILE CONT <= NUMERO LOOP
        FACTORIAL := FACTORIAL * CONT;
        CONT := CONT + 1;
    END LOOP;
    DBMS_OUTPUT.PUT_LINE('El factorial de ' || NUMERO || ' es: ' || FACTORIAL);
END;
/
